<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="movie"
            type="com.omdb.jim.model.Movie" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_parent"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_movie"
                android:src="@drawable/sample_movie_poster"
                srcByUrl="@{movie.posterUrl}"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/movie_poster"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv_title"
                android:text="@{movie.title, default=@string/movie_title}"
                android:textSize="17sp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:paddingTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                app:layout_constraintTop_toBottomOf="@id/iv_movie"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_year"
                android:text="@{movie.year, default=@string/_2019}"
                android:textAppearance="?attr/textAppearanceBody1"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>