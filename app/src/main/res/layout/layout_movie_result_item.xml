<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="movie"
            type="com.omdb.jim.model.Movie" />
        <variable
            name="vm"
            type="com.omdb.jim.vm.ResultViewModel" />
        <variable
            name="tap"
            type="com.omdb.jim.OnResultTap" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cl_parent_suggestion_item"
        android:transitionName="@{movie.imdbId + `_transition`}"
        android:onClick="@{(v) -> tap.onTap(movie, v)}"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_poster"
            android:src="@drawable/sample_movie_poster"
            srcByUrl="@{movie.posterUrl}"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/movie_poster"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_type"
            android:text="@{movie.type, default=`Series`}"
            app:layout_constraintTop_toBottomOf="@id/iv_poster"
            app:layout_constraintStart_toStartOf="@id/iv_poster"
            app:layout_constraintEnd_toEndOf="@id/iv_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{movie.title, default=@string/pirates_of_the_caribbean}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            app:layout_constraintBottom_toBottomOf="@id/iv_poster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_poster"
            app:layout_constraintTop_toTopOf="@id/iv_poster" />
        <TextView
            android:id="@+id/tv_year"
            android:text="@{movie.year, default=@string/_2019}"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>