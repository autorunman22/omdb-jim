<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigator"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.omdb.jim.ListFragment"
        android:label="OmDB Demo"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
        <action
            android:id="@+id/action_listFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.omdb.jim.MovieFragment"
        android:label="Details"
        tools:layout="@layout/fragment_movie" >
        <argument
            android:name="poster_url"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="imdbId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.omdb.jim.ResultFragment"
        android:label="Search"
        tools:layout="@layout/fragment_result">
        <argument
            android:name="query"
            app:argType="string" />
        <action
            android:id="@+id/action_resultFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
    </fragment>
</navigation>